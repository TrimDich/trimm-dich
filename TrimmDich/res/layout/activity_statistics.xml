<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="#FFFFFF"  >

    	
    <TextView
        android:id="@+id/statistics_headline"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="15dp"
        android:text="@string/statistics_headline"
        android:textSize="30dp" 
        android:layout_weight="1"/> 
    
    	
    
     <TextView
        android:id="@+id/distanceText"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="15dp"
        android:text="@string/statistics_run_distance"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold"
        android:layout_weight="1" />
     	

    <TextView
        android:id="@+id/distanceMetric"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="15dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="italic"
        android:layout_weight="1" />
    	
   
    <TextView
        android:id="@+id/speedText"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="15dp"
        android:text="@string/statistics_run_speed"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold"
        android:layout_weight="1" />
		
   
    <TextView
        android:id="@+id/speedMetric"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="15dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="italic"
        android:layout_weight="1" />      
   
		
	    <TextView
        android:id="@+id/squatText"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="15dp"
        android:text="@string/statistics_squat_reps"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold"
        android:layout_weight="1"/>
	  
    
     
    	


		<LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="0dp"
	    android:orientation="horizontal"
	    android:gravity="center"
	    android:layout_weight="2.5">
	    
	    	<LinearLayout 
	    	    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:orientation="vertical"
			    android:gravity="center">
			    
	    	    <ImageView
		        android:id="@+id/dipImage"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:contentDescription="You made it."
		        android:src="@drawable/push_up" />
	    	    <TextView
		        android:id="@+id/dipMetric"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textAppearance="?android:attr/textAppearanceLarge"
		        android:textStyle="italic" />
	    	</LinearLayout>
		    <LinearLayout 
	    	    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:orientation="vertical"
			    android:gravity="center">
			    <ImageView
		        android:id="@+id/pushupImage"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:contentDescription="You made it."
		        android:src="@drawable/push_up" />
			    <TextView
		        android:id="@+id/pushupMetric"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textAppearance="?android:attr/textAppearanceLarge"
		        android:textStyle="italic" />
			    </LinearLayout>
			<LinearLayout 
	    	    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:orientation="vertical"
				android:gravity="center"> 
			    <ImageView
		        android:id="@+id/pullupImage"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:contentDescription="You made it."
		        android:src="@drawable/pull_up" />
			    <TextView
		        android:id="@+id/pullupMetric"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textAppearance="?android:attr/textAppearanceLarge"
		        android:textStyle="italic" />
			</LinearLayout>
			<LinearLayout 
	    	    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:orientation="vertical"
				android:gravity="center"> 
			    <ImageView
		        android:id="@+id/squatImage"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:contentDescription="You made it."
		        android:src="@drawable/squat" />
				<TextView
		        android:id="@+id/squatMetric"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textAppearance="?android:attr/textAppearanceLarge"
		        android:textStyle="italic" /></LinearLayout>
	    </LinearLayout>
	
		
   <TextView
        android:id="@+id/caloriesText"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="0dp"
        android:text="Verbrauchte Kalorien"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold"
        android:layout_weight="1" />
    <TextView
        android:id="@+id/caloriesMetric"
        android:layout_width="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_height="0dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="italic"
        android:layout_weight="1" />	
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:layout_weight="1">
        <Button
        android:id="@+id/statistics_button"
        android:layout_width="270dp"
        android:layout_height="60dp"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="@string/statistics_back_button"
        android:layout_alignParentBottom="true"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:onClick="mainMenu" />
    </RelativeLayout> 	
    
</LinearLayout>