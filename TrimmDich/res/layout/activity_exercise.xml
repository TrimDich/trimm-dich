<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/exercise_overview_default"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="22dp"
        android:layout_marginTop="22dp"
        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        android:text="@string/exercise_overview_default"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/exercise_overview_default"
        android:contentDescription="@string/boder_img"
        android:src="#ccc" />

    <!--
         <Button
        android:id="@+id/exercise_bt_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:longClickable="true"
        android:onClick="onBtNextClick"
        android:text="@string/exercise_bt_next" />
    -->

    <TextView
        android:id="@+id/exercise_countView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/exercise_pic"
        android:layout_centerHorizontal="true"
        android:paddingTop="8dp"
        android:text="@string/exercise_zero"
        android:textColor="@color/subtitle_text_color"
        android:textSize="150sp" />

    <ImageView
        android:id="@+id/exercise_pic"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/imageView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:contentDescription="@string/exercise_img_content_description"
        android:src="@drawable/pull_up" />

    <TextView
        android:id="@+id/exercise_exercise_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/exercise_countView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:paddingTop="8dp"
        android:text="@string/exercise_pushup"
        android:textColor="@color/subtitle_text_color"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
         android:layout_above="@+id/nextExercise"
        android:layout_alignParentLeft="true"
        android:contentDescription="@string/boder_img"
        android:src="#ccc" />

    <TextView
         android:id="@+id/nextExercise"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:onClick="onBtNextClick"
        android:gravity="center"
        android:text="@string/exercise_bt_next"
        android:textColor="@color/subtitle_text_color"
        android:textSize="25sp" />

</RelativeLayout>